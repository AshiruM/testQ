 <%-include("./partials/header.ejs")%>  
   <link rel="stylesheet" href="/public/css/bSignup.css">
    <title>Sign Up</title>
   
    

</head>

<body>
    <div class="container">
        <div class="img-container">
            <div class="heading-container">
                <h2>Easy, Secure <br>and easy to use</h2>
                <p>Register your business right now and allow <br> queuing online for your business</p>
            </div>
            <img src="/public/images/signup-bg.png" alt="">
        </div>
        
            <div class="form">
                <!-- <% if (typeof isError !="undefined" || typeof errorDescription !="undefined" ) { %>
                    <div class="errorToast show">
                    <p><%=errorDescription %> Already exists </p>
                <% }else{ %>               
                <div class="errorToast">
                <%}%> -->

                <% if (typeof isError !="undefined" || typeof errorDescription !="undefined" ) { %>
                    <% if (isError) { %>
                        <div class="errorToast show">
                        <p><%=errorDescription%> Already exists </p>
                    <% }else{ %> 
                        <div class="errorToast">
                        <%}%>
                <% }else{ %>               
                <div class="errorToast">
                <%}%>
                   
                </div>
                <form id="signup"action="/business-sign-up" method="post">
                    <div class="inner-form">

                        <div class="form-row">
                            <div class="form-field">
                                <input type="text" name="bName" placeholder="none" required >
                                <label for="bName">Business Name</label>
                            </div>
                            <div class="form-field">
                                <!-- <label for="bType">Business Name</label> -->
                                <select name="bType">
                                    <option style="color: #5f6368;" value="" disabled selected hidden >Type of Business</option>
                                    <option value="Retail">Retail Product</option>
                                    <option value="Gas">Gas</option>
                                  </select>
                            </div>
                        </div>
                        <div class="short-fields form-row">
                            <div class="form-field short">
                                <input type="text" name="fName" placeholder="none" required >
                                <label for="fName">First Name</label>
                            </div>
                            <div class="form-field short">
                                <input type="text" name="lName" placeholder="none">
                                <label for="lName">Last Name</label>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-field">
                                <input type="email" name="email" placeholder="none" required>
                                <label for="email">Email</label>
                            </div>
                            <div class="form-field">
                                <input type="text" name="nic" placeholder="none" required>
                                <label for="nic">NIC No</label>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-field">
                                <input type="text" name="address" placeholder="none" required>
                                <label for="address">Address</label>
                            </div>
                        </div>

                        <div class="short-fields form-row">
                            <div class="form-field short">
                                <input type="text" name="zipCode" placeholder="none" required>
                                <label for="zipCode">Zip Code</label>
                            </div>
                            <div class="form-field short">
                                <input type="text" name="telNo" placeholder="none" required>
                                <label for="telNo">Tel No</label>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-field">
                                <input type="text" name="username" placeholder="none" required>
                                <label for="username">Username</label>
                            </div>
                            <div class="form-field">
                                <input id="password"type="text" name="password" placeholder="none" required>
                                <label for="password">Password</label>
                            </div>
                        </div>

                        <div class="form-field button">
                            <button name="signUp"type="submit">Sign Up</button>
                        </div>
                    </div>
                </form>
            </div>
        
    </div>
    <script src="../public/js/business.sign-up.js"></script>
</body>

</html>