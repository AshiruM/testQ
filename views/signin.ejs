<%- include("./partials/header.ejs")%>
    <link rel="stylesheet" href="/public/css/signin.css">
    <title>Document</title>
</head>

<body>

    <div class="container">
        
        <div class="form">
            <div class="img-container">
                <img src="/public/images/logo-transparent.png" alt="">
                <% if (typeof isError !="undefined" || typeof errorDescription !="undefined" ) { %>
                    <% if (isError) { %>
                        <div class="errorToast show">
                        <p><%=errorDescription%></p>
                    <% }else{ %> 
                        <div class="errorToast">
                        <%}%>
                <% }else{ %>               
                <div class="errorToast">
                <%}%>
            </div>
            
            <form action="/sign-in" method="post">
                <div class="form-field">
                    <input type="text" name="username" placeholder="none">
                    <label for="username">Username</label>
                </div>
                <div class="form-field">
                    <input type="text" name="password" placeholder="none">
                    <label for="password">Password</label>
                </div>
                <div class="form-field button">
                    <button type="submit">Sign In</button>
                </div>
                <a href="/sign-up">Create a account</a>
            </form>
        </div>
    </div>


</body>

</html>